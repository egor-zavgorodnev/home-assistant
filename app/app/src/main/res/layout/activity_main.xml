<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEEFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/backPreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="468dp"
        android:text="..."
        android:textColor="@android:color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/voda"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/voda" />

    <TextView
        android:id="@+id/ruble_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="260dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/centurygothic_bold"
        android:text="@string/rub_sym"
        android:textColor="#232323"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/voda_balance"
        style="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="196dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/centurygothic_bold"
        android:text="124"
        android:textColor="#232323"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back_button"
        style="@null"
        android:layout_width="127dp"
        android:layout_height="33dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/btn"
        android:gravity="center"
        android:onClick="updateVolgaBackInfo"
        android:paddingBottom="7dp"
        android:text="@string/refresh_sym"
        android:textAppearance="@null"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/voda_button"
        style="@null"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/btn"
        android:onClick="updateVodaBalance"
        android:paddingBottom="9dp"
        android:text="@string/refresh_sym"
        android:textAlignment="center"
        android:textAppearance="@null"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="460dp"
        android:fontFamily="@font/centurygothic"
        android:text="Назад"
        android:textAppearance="@null"
        android:textColor="#232323"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/forth_button"
        style="@null"
        android:layout_width="127dp"
        android:layout_height="33dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="192dp"
        android:background="@drawable/btn"
        android:gravity="center"
        android:onClick="updateVolgaForthInfo"
        android:paddingBottom="7dp"
        android:text="@string/refresh_sym"
        android:textAppearance="@null"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/forth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="192dp"
        android:fontFamily="@font/centurygothic"
        android:text="Туда"
        android:textAppearance="@null"
        android:textColor="#232323"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/forthInfoList"
        android:layout_width="345dp"
        android:layout_height="191dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="240dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/backInfoList"
        android:layout_width="346dp"
        android:layout_height="204dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="511dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/forthPreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="200dp"
        android:text="..."
        android:textColor="@android:color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>